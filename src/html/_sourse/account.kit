<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=PT+Serif:wght@400;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Bayon&display=swap" rel="stylesheet">
        <title></title>
    </head>
    <body class="account">
            <!-- @import "components/header/header.kit" -->
            <main class="account__main">
                <div class="content">
                    <h1 class="account__title"><span class="en">My account</span><span class="ru">Мой аккаунт</span></h1>
                    <nav class="account__nav">
                        <button type="button" class="account__subtitle account__subtitle-orders _selected"><span class="en">Orders</span><span class="ru">Заказы</span></button>
                        <button type="button" class="account__subtitle account__subtitle-settings"><span class="en">Main settings</span><span class="ru">Основные настройки</span></button>
                        <button type="button" class="account__subtitle account__subtitle-set-pass"><span class="en">Set password</span><span class="ru">Изменить пароль</span></button>
                    </nav>
                    <div class="account__subpage account__orders"></div>
                    <div class="account__subpage account__settings">
                        <div class="account__setting account__setting-nickname">
                            <form action="#" class="account__form account__form-nickname">
                                <laber class="account__setting-label" for="account_nickname"><span class="en">Nickname</span><span class="ru">Никнейм</span></laber>
                                <div class="account__setting-input-container">
                                    <input value="" readonly id="account_nickname" type="text" class="account__setting-input account__setting-input-nickname">
                                    <p class="account__setting-error account__setting-error-nickname"></p>
                                </div>
                                <button type="button" class="account__setting-set account__setting-set-nickname"><span class="en">Set</span><span class="ru">Изменить</span></button>
                                <button type="submit" class="account__setting-submit"><span class="en">Confirm</span><span class="ru">Подтвердить</span></button>
                            </form>
                        </div>
                        <div class="account__setting account__setting-email">
                            <form action="#" class="account__form account__form-email">
                                <laber class="account__setting-label" for="account_email"><span class="en">Email</span><span class="ru">Эл. почта</span></laber>
                                <div class="account__setting-input-container">
                                    <input readonly id="account_email" type="text" class="account__setting-input account__setting-input-email">
                                    <p class="account__setting-error account__setting-error-email"></p>
                                </div>
                                <button type="button" class="account__setting-set account__setting-set-email"><span class="en">Set</span><span class="ru">Изменить</span></button>
                                <button type="submit" class="account__setting-submit"><span class="en">Confirm</span><span class="ru">Подтвердить</span></button>
                            </form>
                        </div>
                        <div class="account__setting account__setting-tlg">
                            <form action="#" class="account__form account__form-tlg">
                                <laber class="account__setting-label" for="account_tlg"><span class="en">Telegram</span><span class="ru">Telegram</span></laber>
                                <div class="account__setting-input-container">
                                    <input readonly id="account_tlg" type="text" placeholder="@telegram" class="account__setting-input account__setting-input-tlg">
                                    <p class="account__setting-error account__setting-error-tlg"></p>
                                </div>
                                <button type="button" class="account__setting-set account__setting-set-tlg"><span class="en">Set</span><span class="ru">Изменить</span></button>
                                <button type="submit" class="account__setting-submit"><span class="en">Confirm</span><span class="ru">Подтвердить</span></button>
                            </form>
                        </div>
                    </div>
                    <div class="account__subpage account__set-pass">
                        <form action="#" class="account__set-pass-form">
                            <laber class="account__setting-label" for="account_current_pass"><span class="en">Current password</span><span class="ru">Текуший пароль</span></laber>
                            <input tabindex="1" id="account_current_pass" type="password" class="account__set-pass-input account__set-pass-current-input">
                            <p class="account__set-pass-error account__set-pass-error-current"></p>
                            <laber class="account__setting-label" for="account_new_pass"><span class="en">New password</span><span class="ru">Новый пароль</span></laber>
                            <input tabindex="2" id="account_new_pass" type="password" class="account__set-pass-input account__set-pass-new-input">
                            <laber class="account__setting-label" for="account_repeat_pass"><span class="en">Repeat password</span><span class="ru">Повторите пароль</span></laber>
                            <input tabindex="3" id="account_repeat_pass" type="password" class="account__set-pass-input account__set-pass-repeat-input">
                            <p class="account__set-pass-error account__set-pass-error-new"></p>
                            <button tabindex="4" type="submit" class="account__set-pass-submit"><span class="en">Send</span><span class="ru">Отправить</span></button>
                        </form>
                        <form action="#" class="account__set-pass-form-code _hidden">
                            <button type="button" class="account__set-pass-back">
                                <span class="account__set-pass-back-line account__set-pass-back-line-1"></span>
                                <span class="account__set-pass-back-line account__set-pass-back-line-2"></span>
                                <span class="account__set-pass-back-line account__set-pass-back-line-3"></span>
                            </button>
                            <laber class="account__setting-label" for="account_pass_code"><span class="en">Email code</span><span class="ru">Email код</span></laber>
                            <input id="account_pass_code" type="text" class="account__set-pass-input account__set-pass-code-input">
                            <p class="account__set-pass-error account__set-pass-error-code"></p>
                            <button type="submit" class="account__set-pass-submit account__set-pass-code-submit"><span class="en">Send</span><span class="ru">Отправить</span></button>
                        </form>
                    </div>
                </div>
            </main>
            <!-- @import "components/footer/footer.kit" -->
        <script src="../js/header.js"></script>
        <script src="../js/account.js"></script>
    </body>
</html>